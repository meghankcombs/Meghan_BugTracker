@model Meghan_BugTracker.Models.ApplicationUser

<div class="page-header m-b-0 p-b-0 b-b-0">
    <h1>Change Names</h1>
    <ul class="nav nav-tabs page-block m-t-4" id="account-tabs"></ul>
</div>
<div class="tab-content p-y-4">
    <!-- Profile tab -->
    <div class="tab-pane fade in active" id="account-profile">
        <div class="row">
            <div class="col-md-8 col-lg-9">
                <div class="p-x-1">
                    @using (Html.BeginForm("ChangeName", "Manage", FormMethod.Post, new { @class = "col-md-8 col-lg-9", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(model => model.UserPhoto)
                        <fieldset class="form-group form-group-lg">
                            <label for="account-name">First Name</label>
                            <input type="text" name="firstName" class="form-control" value="@Model.FirstName">
                            @*@Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })*@
                        </fieldset>
                        <fieldset class="form-group form-group-lg">
                            <label for="account-username">Last Name</label>
                            <input type="text" name="lastName" class="form-control" value="@Model.LastName">
                            @*@Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })*@
                        </fieldset>
                        <fieldset class="form-group form-group-lg">
                            <label for="account-username">Display Name</label>
                            <input type="text" name="displayName" class="form-control" value="@Model.DisplayName">
                            @*@Html.EditorFor(model => model.DisplayName, new { htmlAttributes = new { @class = "form-control" } })*@
                        </fieldset>
                        <button type="submit" class="btn btn-lg btn-primary m-t-3">Update</button>
                    }
                </div>
            </div>
        </div>
    </div>
    <!-- / Profile tab -->
</div>

