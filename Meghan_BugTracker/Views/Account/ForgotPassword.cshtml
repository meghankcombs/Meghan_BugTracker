@model Meghan_BugTracker.Models.ForgotPasswordViewModel

<div class="page-header m-b-0 p-b-0 b-b-0">
    <h1>Forgot Password</h1>
    <ul class="nav nav-tabs page-block m-t-4" id="account-tabs"></ul>
</div>
<div class="tab-content p-y-4">
    <!-- Register tab -->
    <div class="tab-pane fade in active" id="account-profile">
        <div class="row">
            @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post, new { @class = "col-md-8 col-lg-9", role = "form" }))
            {
                <div class="p-x-1">
                    <fieldset class="form-group form-group-lg">
                        <label for="account-email">Enter your email</label>
                        <input type="email" name="Email" class="form-control">
                    </fieldset>
                    <button type="submit" class="btn btn-lg btn-primary m-t-3">Submit</button>
                </div>
            }
            <!-- Spacer -->
            <div class="m-t-4 visible-xs visible-sm"></div>
        </div>
    </div>
    <!-- / Register tab -->
</div>



