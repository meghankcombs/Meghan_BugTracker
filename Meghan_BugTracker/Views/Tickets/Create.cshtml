@model Meghan_BugTracker.Models.Ticket

<div class="px-content">
    <div class="page-header">
        <h1><span class="text-muted font-weight-light"><i class="page-header-icon ion-android-checkbox-outline"></i>Ticket / </span>Create</h1>
    </div>
    <div class="panel">
        <div class="panel-heading">
            <div class="panel-title">New Ticket</div>
        </div>
        @using (Html.BeginForm())
        {
        @Html.AntiForgeryToken()
            <fieldset class="form-group">
                <label for="form-group-input-1">Title</label>
                <input type="text" class="form-control" name="Title" id="form-group-input-1" placeholder="Ticket Title">
            </fieldset>
            <fieldset class="form-group">
                <label for="form-group-input-2">Description</label>
                <input type="text" class="form-control" name="Description" id="form-group-input-2" rows="5" maxlength="1000" placeholder="Ticket Description">
                <small class="text-muted">Maximum length is 1000 characters</small>
            </fieldset>
            <fieldset class="form-group">
                <label for="form-group-input-2">For Project</label>
                @Html.DropDownList("ProjectId", null, htmlAttributes: new { @class = "form-control" })
            </fieldset>
            <fieldset class="form-group">
                <label for="form-group-input-2">Priority</label>
                @Html.DropDownList("TicketPriorityId", null, htmlAttributes: new { @class = "form-control" })
            </fieldset>
            <fieldset class="form-group">
                <label for="form-group-input-2">Type</label>
                @Html.DropDownList("TicketTypeId", null, htmlAttributes: new { @class = "form-control" })
            </fieldset>

            <fieldset class="form-group text-right">
                <button type="submit" class="btn btn-primary">Submit</button>
            </fieldset>
        }
    </div>
</div>
